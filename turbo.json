{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": ["**/.env.*local", ".env"],
  "globalEnv": [
      "PORT",
      "ADMIN_URL",
      "LMS_URL",
      "CORE_URL",
      "MONGODB_URI",
      "MONGODB_DATABASE",
      "CORE_SECRET_KEY",
      "CORE_PORT",
      "KAFKA_USERNAME",
      "KAFKA_PASSWORD",
      "KAFKA_BROKER",
      "MAILGUN_API_KEY",
      "MAILGUN_DOMAIN",
      "ARKESEL_API_KEY"
    ],
  "tasks": {
    "build": {
      "dependsOn": ["^build"]
    },
    "test": {
      "outputs": ["coverage/**"],
      "dependsOn": []
    },
    "lint": {
      "dependsOn": ["^build"]
    },
    "typecheck": {
      "dependsOn": ["^build"]
    },
    "dev": {
      "dependsOn": ["^build"],
      "cache": false,
      "persistent": true
    },
    "clean": {
      "cache": false
    }
  }
}
